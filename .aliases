# Shared aliases (used by both Bash and Zsh)

# Reload shell configuration (loads profile for env/paths, then shell-specific settings)
alias reload='OLD_PATH="$PATH"; source ~/.profile; if [ -n "$ZSH_VERSION" ]; then source ~/.zshrc; elif [ -n "$BASH_VERSION" ]; then source ~/.bashrc; fi; echo "PATH changes:"; echo "Old: $OLD_PATH"; echo "New: $PATH"'

# File system
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias path='echo $PATH | tr ":" "\n" | sed "s/^/- /"'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# Git shell aliases
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gd='git diff'
alias gw='git switch'

# GCP aliases
alias gauth='gcloud auth login'
alias gproj='gcloud config set project'
alias ginfo='gcloud config list'
alias gkctx='gcloud container clusters get-credentials'

# Terraform aliases
alias bg='../../tools/break-glass.sh terraform'